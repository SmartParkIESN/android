<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif"
            android:id="@+id/ViewAnnoucementTitle"
            android:textSize="23sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:text=""
            android:layout_marginLeft="5dp"
            android:id="@+id/ViewAnnoucementPrice" />

        <TextView
            android:text=""
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/ViewAnnoucementAddress" />

        <TableRow>
            <ImageView
                android:id="@+id/ViewAnnouncementParkingPhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                tools:background="#AAA"
                />
            <TextView
                android:text=""
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="150dp"
                android:id="@+id/ViewAnnoucementDescription" />
        </TableRow>
        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.henallux.projet.smartpark.business.ViewAnnouncement"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>



    </TableLayout>

</LinearLayout>